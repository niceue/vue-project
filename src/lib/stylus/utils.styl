@require './vars'
@require './mixins'

/***********
 * 布局
 **********/
// 盒子
.block {display: block}
.inline-block {display: inline-block}
.full-width {width: 100%}
.relative {position: relative}
.absolute {position: absolute}

// 伸缩盒
.flexbox {box: horizontal middle space-between}
.flexbox-vertical {box: vertical middle}
.flexbox-center {box: center}
.flexbox-right {box: right}
// 伸缩盒子元素
.flex {box-item: flex-auto}
.flex-none {box-item: flex-none}
.flex-stretch {box-item: middle stretch}
.flex-left {box-item: flex-left}
.flex-right {box-item: flex-right}
.flex-1 {box-item: flex-1}
.flex-2 {box-item: flex-2}
.flex-3 {box-item: flex-3}
.flex-4 {box-item: flex-4}

// 内边距
.pl10, .pl-base {padding-left: rem(10)}
.pr10, .pr-base {padding-right: rem(10)}
.pt10, .pt-base {padding-top: rem(10)}
.pb10, .pb-base {padding-bottom: rem(10)}
.pl20 {padding-left: rem(20)}
.pr20 {padding-right: rem(20)}
.pt20 {padding-top: rem(20)}
.pb20 {padding-bottom: rem(20)}

// 外边距
.ml10, .ml-base {margin-left: rem(10)}
.mr10, .mr-base {margin-right: rem(10)}
.mt10, .mt-base {margin-top: rem(10)}
.mb10, .mb-base {margin-bottom: rem(10)}
.ml20 {margin-left: rem(20)}
.mr20 {margin-right: rem(20)}
.mt20 {margin-top: rem(20)}
.mb20 {margin-bottom: rem(20)}

// 对齐
.tac {text-align: center}
.tal {text-align: left}
.tar {text-align: right}
.vat {vertical-align: top}
.vam {vertical-align: middle}

// 行高
.lh100 {line-height: 100%}
.lh120 {line-height: 120%}
.lh150 {line-height: 150%}
.lh180 {line-height: 180%}

// 背景色
.bg-none {background: none !important}
.bg-white {background-color: #fff}
.bg-gray {background-color: $bg-gray}

// 字体色
.primary {color: $primary}
.white {color: $white}
.black {color: $black}
.gray {color: $gray}
.dark-gray {color: $dark-gray}
.light-gray {color: $light-gray}
.red {color: $red}
.green {color: $green}

// 字体粗细
.fw100 {font-weight: 100}
.fw200 {font-weight: 200}
.fw300 {font-weight: 300}
.fw400 {font-weight: 400}
.fw500 {font-weight: 500}
.fw600 {font-weight: 600}
.fw700,.bold {font-weight: 700}
.fw800 {font-weight: 800}
.fw900 {font-weight: 900}

// 字体大小
.fs12 {font-size: rem(12)}
.fs14 {font-size: rem(14)}
.fs16 {font-size: rem(16)}
.fs18 {font-size: rem(18)}
.fs20 {font-size: rem(20)}
.fs22 {font-size: rem(22)}
.fs24 {font-size: rem(24)}
.fs26 {font-size: rem(26)}
.fs28 {font-size: rem(28)}
.fs30 {font-size: rem(30)}
.fs32 {font-size: rem(32)}
.fs34 {font-size: rem(34)}
.fs36 {font-size: rem(36)}
.fs38 {font-size: rem(38)}
.fs40 {font-size: rem(40)}
.fs44 {font-size: rem(44)}
.fs48 {font-size: rem(48)}
.fs60 {font-size: rem(60)}

//字体普通化
.normal {font-weight: normal; font-style: normal; font-size: 1rem; text-decoration: none;}

// 浮动
.fl {float: left;}
.fr {float: right;}

// 清除浮动
.clearfix {
  clearfix()
}

// 隐藏超出的文字
.ellipsis {
  ellipsis()
}

// 换行
.break-word {
  break-word()
}

// 不换行
.nowrap {
  white-space: nowrap
}

.no-select {user-select: none; cursor:default;}

// 不可见
.invisible {visibility: hidden}

// 隐藏
.hide,.hidden {display: none !important; visibility: hidden !important;}

// 隐藏文本
.hide-text {font:0/0 a;color:transparent;text-shadow:none;background-color:transparent;border:0}
